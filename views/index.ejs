<%- include("partials/header.ejs") %>
<% if(locals.wplace){ %>
  
<div class="container">
    <div class="head"><h1>
   <%= locals.wplace %> Weather Forecast
    </h1></div>
    <div class="container1">
        <div class="box1">
        <img class="icon" src="https://openweathermap.org/img/wn/<%= locals.wicon %>@2x.png"> 
    </div>
   
    <div class="box2"><p><%= locals.Today %></p> <span class="desc"><%= locals.wdescription%></div>
</div>
<div class="container2">
    <div class="box3"><span class="font"><%= locals.wtemp %></span> </div>
   <div class="box4"><span class="size">°C</span></div>
</div>
</div>
<div class="container3">
  <span class="today">Weather Today in <%= locals.wplace %></span>
  <div class="box6">
    <div class="box5">
      
      <br>
      <br>
      <br>
      <div class="box7">
      <img src="images/thermometer.png"  width="40px" height="40px" alt="thermo logo">
     <span style="text-align: left;"> <span class="bold">Temp Feels</span> <br>
     <span class="value"><%= locals.feelslike %>°C</span></span>
    </div>
  </div>
  <div class="box5"> 
    
    <br>
      <br>
      <br>
      <div class="box7">
    <img src="images/humidity (1).png" width="40px" height="40px" alt="humidity">
    <span style="text-align: left;"><span class="bold">Humidity</span> <br>
    <span><%= locals.humidity %>%</span></span> 
  </div>
</div>
  <div class="box5">
    
     <br>
      <br>
      <br>
      <div class="box7">
     <img src="images/gauge.png" width="40px" height="40px" alt="pressure logo">
     <span style="text-align: left;"><span class="bold">Pressure</span> <br>
     <span><%= locals.pressure %>Pa</span></span>
    </div>
  </div>
  <div class="box5">
      
     
     <br>
      <br>
      <br>
      <div class="box7">
     <img src="images/icons8-wind-50.png" width="40px" height="40px" alt="wind icon">
    
     <span style="text-align: left;"> <span class="bold">Wind Speed</span> <br>
      <span><%= locals.windspeed %>m/sec</span>
     </span> 
    
    </div>
    </div>
  </div>
  
</div>
<div class="container4">
    <div class="four">
        <div>
          <h2 style="font-size: 1.25rem;">Weather Data of <%= locals.wplace %></h2>
        
        </div>
        <br>
        <div class="sub-four">
          <div class="sub1">
            <div>
              <p>High Temp</p>
            </div>
            <div>
              <p><%= locals.maxtemp %>°C</p>
            </div>
          </div>
          <hr>
          <div class="sub2">
            <div>
              <p>Low Temp</p>
            </div>
            <div>
              <p><%= locals.mintemp %>°C</p>
            </div>
          </div>
          <hr>
          <div class="sub3">
            <div>
              <p>Wind Degree</p>
            </div>
            <div>
              <p><%= locals.wdeg %>°</p>
            </div>
          </div>
          <hr>
          <div class="sub4">
            <div>
              <p>Longitude</p>
            </div>
            <div>
              <p><%= locals.longitude %>°</p>
            </div>
          </div>
          <hr>
          <div class="sub5">
            <div>
              <p>Latitude</p>
            </div>
            <div>
              <p><%= locals.latitude %>°</p>
            </div>          
            </div>
          </div>
          <hr>
               
        </div>
      </div>
     
</div>

 <% } if(!locals.wplace & !locals.content) {%>
  <div class="box8"><span class="search1">Please enter the City/Town name at the right corner <br> in order to get weather data. </span>
  </div>
       <% } %>
<% if(locals.content) { %>
  <div class="box8"><span class="search1"><%= locals.content %> <br> Please enter the correct location name...! </span>
  </div>
  <% } %>
<%- include("partials/footer.ejs") %>
 